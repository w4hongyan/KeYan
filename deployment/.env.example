# KeYan 科研协作平台 - 生产环境配置示例
# 复制此文件为 .env 并修改为您的实际配置

# =================== 数据库配置 ===================
POSTGRES_DB=keyan_prod
POSTGRES_USER=keyan_user
POSTGRES_PASSWORD=your_secure_db_password_change_this
DATABASE_URL=postgresql://keyan_user:your_secure_db_password@db:5432/keyan_prod

# =================== Redis 配置 ===================
REDIS_URL=redis://redis:6379/0

# =================== Django 配置 ===================
SECRET_KEY=your_django_secret_key_here_change_this_in_production_32_chars_min
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# =================== 时区和语言 ===================
TIME_ZONE=Asia/Shanghai
LANGUAGE_CODE=zh-hans

# =================== 邮件配置 ===================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password

# =================== 域名配置 ===================
SITE_DOMAIN=yourdomain.com
SITE_URL=https://yourdomain.com

# =================== SSL/TLS 配置 ===================
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=("HTTP_X_FORWARDED_PROTO", "https")

# =================== 文件上传配置 ===================
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/
STATIC_URL=/static/
STATIC_ROOT=/app/static/
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# =================== 第三方API配置 ===================
PUBMED_API_KEY=your-pubmed-api-key
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# =================== 日志配置 ===================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/keyan.log

# =================== Celery 配置 ===================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =================== 监控配置 ===================
SENTRY_DSN=your_sentry_dsn_here

# =================== 备份配置 ===================
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# =================== CDN配置 ===================
CDN_URL=https://your-cdn-url.com

# =================== 缓存配置 ===================
CACHE_TIMEOUT=300